// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  VENDOR
  CUSTOMER
}

enum ProductType {
  GOODS
  SERVICE
}

enum RentUnit {
  HOUR
  DAY
  WEEK
  MONTH
}

enum OrderStatus {
  DRAFT       // Initial state - being created
  QUOTATION   // Gray - "Quotation" (Customer Request - No stock reservation)
  SENT        // Purple - "Quotation Sent" (Vendor sent quotation to customer)
  APPROVED    // Purple - "Approved" (Vendor approved, awaiting payment)
  CONFIRMED   // Green - "Confirmed" (Payment done, stock reserved)
  INVOICED    // Blue - "Invoiced"
  PICKEDUP    // Teal - "Picked Up"
  RETURNED    // Gray - "Returned"
  LATE        // Red - "Late Return"
  CANCELLED   // Red - "Cancelled"
}

enum PaymentStatus {
  UNPAID
  PARTIAL
  PAID
}

enum DeliveryMethod {
  STANDARD
  PICKUP
}

enum InvoiceStatus {
  DRAFT
  POSTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER)
  
  firstName String
  lastName  String
  
  // Vendor-specific fields
  companyName     String?
  gstin           String?
  vendorCategory  String?
  isVerified      Boolean @default(false) // Admin approves vendors
  
  // Profile fields
  avatarUrl   String?
  phoneNumber String?
  address     String?
  
  // Relations
  productsAsVendor Product[] @relation("VendorProducts")
  ordersAsCustomer Order[]   @relation("CustomerOrders")
  ordersAsVendor   Order[]   @relation("VendorOrders")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Product {
  id          String      @id @default(uuid())
  vendorId    String
  vendor      User        @relation("VendorProducts", fields: [vendorId], references: [id], onDelete: Cascade)
  
  name          String
  type          ProductType @default(GOODS)
  description   String      @db.Text
  quantityOnHand Int        @default(0)
  
  rentPrice   Decimal     @db.Decimal(10, 2)
  rentUnit    RentUnit    @default(DAY)
  costPrice   Decimal     @db.Decimal(10, 2)
  
  isPublished Boolean     @default(false)
  
  // Relations
  attributes ProductAttribute[]
  images     ProductImage[]
  orderItems OrderItem[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("products")
}

model ProductAttribute {
  id        String  @id @default(uuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  name       String
  value      String
  extraPrice Decimal @default(0) @db.Decimal(10, 2)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("product_attributes")
}

model ProductImage {
  id        String  @id @default(uuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  url       String
  isPrimary Boolean @default(false)
  
  createdAt DateTime @default(now())
  
  @@map("product_images")
}

model Order {
  id             String         @id @default(uuid())
  orderReference String         @unique
  
  customerId String
  customer   User   @relation("CustomerOrders", fields: [customerId], references: [id])
  
  vendorId String
  vendor   User   @relation("VendorOrders", fields: [vendorId], references: [id])
  
  status        OrderStatus    @default(QUOTATION)
  totalAmount   Decimal        @db.Decimal(10, 2)
  paymentStatus PaymentStatus  @default(UNPAID)
  
  // Workflow timestamps
  sentAt        DateTime?
  approvedAt    DateTime?
  confirmedAt   DateTime?
  
  deliveryMethod DeliveryMethod @default(STANDARD)
  pickupDate     DateTime?
  returnDate     DateTime?
  
  // Relations
  orderItems OrderItem[]
  invoices   Invoice[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("orders")
}

model OrderItem {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  rentalStart DateTime
  rentalEnd   DateTime
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2)
  
  // Lifecycle tracking for pickup & return
  isPickedUp  Boolean @default(false)
  isReturned  Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([productId, rentalStart, rentalEnd])
  @@map("order_items")
}

model Invoice {
  id            String        @id @default(uuid())
  orderId       String
  order         Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  invoiceNumber String        @unique
  status        InvoiceStatus @default(DRAFT)
  
  amountDue  Decimal @db.Decimal(10, 2)
  amountPaid Decimal @default(0) @db.Decimal(10, 2)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("invoices")
}
